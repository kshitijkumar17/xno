<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dialog_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:gravity="center"
    android:background="@drawable/dialog_bg_light">

    <TextView
        android:id="@+id/dialog_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X wins"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:shadowColor="#131313"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:fontFamily="@font/raleway_extrabold"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/diag_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/dialog_info">

        <Button
            android:id="@+id/dialog_newgame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:background="@drawable/button_bg"
            android:text="New Game"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:fontFamily="@font/raleway_medium"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_below="@id/dialog_newgame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:background="@drawable/button_cancel_bg"
            android:text="Cancel"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:fontFamily="@font/raleway_medium"
            android:textAllCaps="false"/>
    </RelativeLayout>
</RelativeLayout>
